@model PostInput

@{
    ViewBag.Title = "مطلب جدید";
}

@Html.Partial("_SaveForm", Model)


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        jQuery.validator.setDefaults({ ignore: ":hidden:not(textarea)" });

        $(document).ready(function () {
            

            //Initial CK EDITOR
            //CKEDITOR.replace('Content');

            CKEDITOR.replace('Content', {
                customConfig: 'config.js'
            });

     
            $("#add-tag").click(function () {
                $(".tm-input").tagsManager('pushTag', $(".tm-input").val());
            });

            // Initial tag manager
            $("#tags-input").tagsManager({
                prefilled: [@Html.Raw(string.Join(",",Model.TagsPrefill.Select(x=>"'"+ x +"'")))],
                tagsContainer: "#tag-container",
                hiddenTagListName: 'tags',
            });



    });

    </script>
  

}
